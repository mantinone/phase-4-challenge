<!DOCTYPE html>
<html>
<head>
  <title>Vinyl</title>
  <link rel="stylesheet" type="text/css" href="/style.css">
  <script type="text/javascript" src="/script.js"></script>
</head>
<body>
  <header>
    <% include ./header %>
  </header>

  <h1>Vinyl</h1>
  <h2><%= user.username %></h2>

  <p>User email <%= user.email %></p>
  <p>Date Joined: <%= user.joined %> </p>

  <h2> Reviews </h2>

  <div class="reviews-list">
    <% reviews.forEach(function(review) { %>
      <div>
        <h5><a href="/albums/<%= review.album_id %>"><%= review.title %></a> <%= review.date %></h5>

        <div><%= review.review_text %></div>
          <% if( currentUser ){
              if(user.id === currentUser.id){ %>
            <form method="post" action="/review/delete/<%= review.id %>" onsubmit="return confirm('Are you sure you want to delete this review?')">
              <input type='submit' value='Delete'>  </input>
            </form>
          <%}}%>
      </div>
    <% })%>
  </div>

</body>
</html>
